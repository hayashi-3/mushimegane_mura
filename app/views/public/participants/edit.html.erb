<div class="container mt-4">
  <div class="ol-md-6 col-md-offset-4 mt-4">
    <%= form_with model: @participant, url: participant_path, local: true do |f| %>
			
		<div class="field">
		  <%= f.label :nickname %><br>
		  <%= f.text_field :nickname, :size=>"40", autofocus: true %>
		</div>			

		<div class="field">
		  <%= f.label :telephone_number %>(ハイフンなし)<br>
		  <%= f.text_field :telephone_number, :size=>"40", autofocus: true %>
		</div>		

		<div class="field">
		  <%= f.label :email %><br>
		  <%= f.email_field :email, :size=>"40", autofocus: true %>
		</div>		

	  <%= f.submit "会員情報を更新する", class: "btn btn-info btn-md mt-4"%>　<%= link_to "退会ページ", participants_withdrawal_path(current_participant), class: "btn btn-danger btn-sm mt-4" %>
　  <% end %>
	</div>
</div>