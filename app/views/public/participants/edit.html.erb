<div class="container">
  <div class="row">
    <%= form_with model: @participant, url: participant_path, local: true do |f| %>
	  <table>
        <tbody>

			<tr>
				<td><%= f.label :nickname, "ニックネーム" %></td>
				<td><%= f.text_field :nickname, autofocus: true %></td>
			</tr>

			<tr>
				<td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
				<td><%= f.text_field :telephone_number, autofocus: true %></td>
			</tr>

			<tr>
				<td><%= f.label :email, "メールアドレス" %></td>
				<td><%= f.email_field :email, autofocus: true %><td>
			</tr>

		</tbody>
	  </table>

	  <%= f.submit "会員情報を更新する", class: "btn btn-primary btn-md"%>　<%= link_to "休民する？(退会ページに飛びます)", "#", class: "btn btn-danger btn-sm" %>
　  <% end %>
	</div>
</div>