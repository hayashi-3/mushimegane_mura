<div class="container mt-4">
  <div class="col-md-8">
    <h3>登録情報</h3><br>
    <%= link_to "編集する", edit_participant_path(current_participant), method: :get, class: "btn btn-primary mt-3" %>
    <%= link_to "パスワードを変更する", edit_participant_registration_path, method: :get, class: "btn btn-primary mt-3" %>

    <table class="table table-bordered mt-5">  
      <tr>
        <th>ニックネーム</th>
        <td><%= @participant.nickname %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td><%= @participant.telephone_number %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @participant.email %></td>
      </tr>
    </table>

    <%= link_to "参加イベント一覧へ", participant_reservations_path(@participant), class: "btn btn-primary" %>
  </div>
</div>