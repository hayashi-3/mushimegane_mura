<div class="container">
  <h2>予約イベント</h2>
  <table class="table">
    <thead>
        <tr>
        <th></th>
        <th>イベント名</th>
        <th>イベント内容</th>
        <th>開催日時</th>
        <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @participant.reserved_events.each do |p| %>
          <tr>
              <td><%= attachment_image_tag p, :image , fallback: "no_image.jpeg", size: '40x40'%></td>
              <td><%= p.event_name %></td>
              <td><%= p.content %></td>
              <td><%= l p.date_and_time %></td>

              <% if @reservation.participant_id == current_participant.id %>
                <td><%= link_to "イベントキャンセル",participant_reservation_path(@participant,@reservation), method: :delete, class: "btn btn-danger btn-md", data: {"turbolinks"=>false} %></td>
              <% end %>

          </tr>
        <% end %>
    </tbody>
  </table>
</div> 