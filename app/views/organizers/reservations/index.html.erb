<div class="container">
  <h2>予約者一覧</h2>
  <table class="table">
    <thead>
        <tr>
          <th>参加者氏名</th>
          <th>メールアドレス</th>
          <th>参加ステータス</th>
          <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
      <% @event.reservations.each do |e| %>
        <tr>
          <td><%=e.participant.nickname %></td>
          <td><%= e.participant.email %></td>
          <td><%= e.attendance_status %></td>
          <td><%= link_to "メールする", new_organizers_participant_info_path(e.participant.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>