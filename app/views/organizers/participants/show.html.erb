<div class="container mt-4">
  <div class="col-md-10 col-md-offset-1">
    <h3>会員情報</h3>
    <table class="table">
      <thead>
          <tr>
            <th>会員ID</th>
            <th>ニックネーム</th>
            <th>電話番号</th>
            <th>メール</th>
            <th>ステータス</th>
          </tr>
        </thead>
      <tr>
        <td><%= @participant.id %></td>
        <td><%= @participant.nickname %></td>
        <td><%= @participant.telephone_number %></td>
        <td><%= @participant.email%></td>
        <% if @participant.is_deleted == true %>
          <td>退会済</td>
        <% else %>
          <td>在籍中</td>
        <% end %>
      </tr>
      </table>

      <%= link_to '編集する', edit_organizers_participant_path, class: "btn btn-info btn-md mt-4" %>
      <%= link_to 'イベント詳細をメールする', new_organizers_participant_info_path(@participant), class: "btn btn-info btn-md mt-4" %>

  </div>
</div>