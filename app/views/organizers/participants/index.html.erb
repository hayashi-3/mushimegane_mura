<div class="container mt-4">
  <div class="col-md-10 col-md-offset-1">
    <h3>会員一覧</h3>
    <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ニックネーム</th>
            <th>電話番号</th>
            <th>メール</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @participants.each do |p| %>
            <tr>
              <td><%= p.id %></td>
              <td><%= link_to p.nickname, organizers_participant_path(p.id)%></td>
              <td><%= p.telephone_number %></td>
              <td><%= p.email %></td>
              <td>
                <% if p.is_deleted == true %>
                  退会済
                <% else %>
                  在籍中
                <% end %>
              </td>
            </tr>
          <% end %>
        <tbody>
    </table>
  </div>
</div>