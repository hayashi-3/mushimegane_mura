<div class="col-md-6 offset-4 mt-4">
  <h4>ようこそ！こちらは管理画面です。下記のフォームからログインしてください。</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <strong>Eメール</strong><br>
      <%= f.email_field :email, :size=>"40", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <strong>パスワード</strong><br>
      <%= f.password_field :password, :size=>"40", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "アカウントを記憶しますか？" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-info btn-md"%>
    </div>
  <% end %>

  <%= render "organizers/shared/links" %>
</div>
