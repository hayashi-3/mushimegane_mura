<div class="row">
  <div class="col-md-4 col-md-offset-5">
		<%= form_with model: @event, url: organizers_events_path, method: :post, local: true do |f| %>
            <!-- イベント画像 -->
            <div class="form-group">
				<%= attachment_image_tag @event, :image, :fill, 100, 100 %>
				<%= f.attachment_field :image, placeholder: "Image" %>
			</div>

			<!-- イベント名 -->
			<div class="form-group">
                <%= f.label :event_name, "イベント名"%>
                <%= f.text_field :event_name, autofocus: true %>
			</div>

			<!-- イベント内容説明 -->
			<div class="form-group">
                <%= f.label :content, "イベント内容"%>
                <%= f.text_area :content, autofocus: true%>
			</div>

			<!-- 　開催日時　 -->
			<div class="form-group">
                <%= f.label :date_and_time, "日時"%>
                <%= f.datetime_select :date_and_time, autofocus: true%>
			</div>

			<!-- 参加人数  -->
            <div class="form-group">
                <%= f.label :number_of_reservations, "参加上限人数"%>
                <%= f.text_field :number_of_reservations, autofocus: true %>
			</div>

			<!-- 開催ステータス -->
			<div class="form-group">
                <%= f.label :is_active, "予約受付状況"%>
                <%= f.select :is_active, {'予約受付中': true, '終了': false}, { class: 'form-control' , required: true } %>
			</div>
			<%= f.submit '新規登録',class:"btn btn-primary btn-md" %>
		<% end %>
  
  </div>
</div>