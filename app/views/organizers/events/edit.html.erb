<div class="container mt-4">
  <div class="col-md-5 col-md-offset-4">
    <h3>イベント情報編集</h3>
	<%= form_with model: @event, url: organizers_event_path(@event.id), local: true do |f| %>

		<!-- イベント画像 -->
		<div class="form-group">
			<%= attachment_image_tag @event, :image, :fill, 100, 100 %>
			<%= f.attachment_field :image, placeholder: "Image" %>
		</div>

		<!-- イベント名 -->
		<div class="form-group">
			<%= f.label :event_name, "イベント名"%><br>
			<%= f.text_field :event_name, :size=>"40", autofocus: true %>
		</div>

		<!-- イベント内容説明 -->
		<div class="form-group">
			<%= f.label :content, "イベント内容"%><br>
			<%= f.text_area :content, :size=>"40", autofocus: true%>
		</div>

		<!-- 　開催日時　 -->
		<div class="form-group">
			<%= f.label :date_and_time, "日時(過去の日時では登録できません)"%><br>
			<%= f.datetime_select :date_and_time, autofocus: true%>
		</div>

　　　　　　　<!-- 参加人数  -->
		<div class="form-group">
			<%= f.label :number_of_reservations, "参加上限人数(半角で入力してください)"%><br>
			<%= f.text_field :number_of_reservations, autofocus: true %>
		</div>

		<!-- 開催ステータス -->
		<div class="form-group">
			<%= f.label :is_active, "予約状況"%><br>
			<%= f.select :is_active, {'予約受付中': true, '終了': false}, { class: 'form-control' , required: true } %>
		</div>

		<%= f.submit '変更を登録する', data: { confirm: "この内容で変更しますか？" }, class:"btn btn-info btn-md" %>

	<% end %>
  </div>
</div>