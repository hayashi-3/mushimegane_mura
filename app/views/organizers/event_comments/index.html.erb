<div class="container">
    <h3>コメント管理</h3>
    <table class="table">
      <thead>
        <th>
          <td >イベント名</td>
          <td>投稿者</td>
          <td>コメント</td>
          <td>投稿日時</td>
          <td></td>
        </th>
      </thead>
      <tbody>
        <% @event_comments.each do |e| %>
          <tr>
            <td><%= e.event.event_name %></td>
            <td><%= e.participant.nickname %></td>
            <td><%= e.comment %></td>
            <td><%= l e.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>