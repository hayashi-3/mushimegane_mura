<div class="col-md-6 offset-4 mt-4">
  <h4>おかえりなさい。下記より入村してください。</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メール" %><br />
      <%= f.text_field :email, :size=>"40", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, :size=>"40", autofocus: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "入村する", class: "btn btn-info btn-md" %>
    </div>
  <% end %>

  <%= render "participants/shared/links" %>
</div>
