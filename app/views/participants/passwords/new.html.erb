<div class="col-md-6 offset-4">
  <h2>そんな時もありますよね。</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "participants/shared/error_messages", resource: resource %>

    <div class="field">
      <label>Eメール</label><br />
      <%= f.email_field :email, :size=>"40", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワード再設定のメールを送ります", class: "btn btn-info btn-md mt-3" %>
    </div>
  <% end %>

  <%= render "participants/shared/links" %>
</div>
